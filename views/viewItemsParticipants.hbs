    <div class="container">
        <h1>Items and Participants</h1>

        {{#if items}}
        <div class="items-grid">
            {{#each items}}
            <div class="item-card">
                <h2>Item: {{this.name}}</h2>
                <h3>Participants:</h3>

                {{#if this.participants.length}}
                <table class="participants-table">
                    <thead>
                        <tr>
                            <th>Contestant Number</th>
                            <th>Participant Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each this.participants}}
                        <tr>
                            <td>{{this.contestantNumber}}</td>
                            <td>{{this.name}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                {{else}}
                <p>No participants for this item.</p>
                {{/if}}
            </div>
            {{/each}}
        </div>
        {{else}}
        <p>No items or participants available.</p>
        {{/if}}
    </div>
