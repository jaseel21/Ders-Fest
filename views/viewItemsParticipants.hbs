        /* General Styles */
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 0 15px;
        }

        h1 {
            text-align: center;
            margin-bottom: 30px;
        }

        .container h1 {
        font-family: 'Poppins', sans-serif;
        }

        /* Items Grid */
        .items-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .item-card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            height: 100%;
            transition: transform 0.3s ease;
        }

        .item-card:hover {
            transform: translateY(-5px);
        }

        .item-card h2,
        .item-card h3 {
            margin-bottom: 15px;
            font-family: 'Poppins', sans-serif;
            font-size: 18px;
        }

        /* Table Styles */
        .participants-table {
         width: 100%;
         border-collapse: collapse;
         margin-top: 20px;
         border-radius: 10px; 
         font-family: 'Poppins', sans-serif;
         }

        .participants-table th,
        .participants-table td {
         padding: 10px;
         text-align: left;
         border: 1px solid #ddd;
        }

.participants-table th {
    background-color: #f8f9fa;
}

.participants-table tr:hover {
    background-color: #f1f1f1;
}
        /* Responsive Styling */
        @media (max-width: 768px) {
            h1 {
                font-size: 24px;
            }

            .container {
                padding: 0 10px;
            }

            .item-card h2 {
                font-size: 18px;
            }

            .item-card h3 {
                font-size: 16px;
            }
        }
    </style>
</head>

